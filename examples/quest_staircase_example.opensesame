define inline_script show_patch
	___run__
	# Set the stimulus parameters
	target.ori = self.get('ori')
	target.contrast = self.get('contrast')
	mask.contrast = self.get('contrast')
	# Show the gabor and mask it
	target.draw()
	win.flip()
	self.sleep(45)
	mask.draw()
	win.flip()
