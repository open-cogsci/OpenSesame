---
API: 2.1
OpenSesame: 3.2.0a8
Platform: posix
---
set width 1024
set uniform_coordinates yes
set title "Basic response test"
set subject_parity even
set subject_nr 0
set start experiment
set sound_sample_size -16
set sound_freq 48000
set sound_channels 2
set sound_buf_size 1024
set round_decimals 2
set height 768
set fullscreen no
set form_clicks no
set foreground white
set font_underline no
set font_size 18
set font_italic no
set font_family mono
set font_bold no
set experiment_path "/home/sebastiaan/git/OpenSesame/opensesame_unittest/data"
set disable_garbage_collection yes
set description "Default description"
set coordinates uniform
set compensation 0
set canvas_backend legacy
set bidi no
set background black

define sequence experiment
	set flush_keyboard yes
	set description "Runs a number of items in sequence"
	run loop True
	run validate True

define keyboard_response keyboard_response
	set timeout 20
	set flush yes
	set duration keypress
	set description "Collects keyboard responses"

define loop loop
	set source_file ""
	set source table
	set skip 0
	set repeat 10
	set order random
	set offset no
	set item sequence
	set description "Repeatedly runs another item"
	set cycles 2
	set continuous no
	set column_order correct_response
	set break_if_on_first yes
	set break_if never
	setcycle 0 correct_response None
	setcycle 1 correct_response space
	run sequence

define sequence sequence
	set flush_keyboard yes
	set description "Runs a number of items in sequence"
	run target True
	run keyboard_response True

define sketchpad target
	set duration 0
	set description "Displays stimuli"

define inline_script validate
	set description "Executes Python code"
	___run__
	print('accuracy: %.2f' % var.accuracy)
	print('avg_rt: %.2f' % var.avg_rt)
	assert(var.accuracy == 50)
	assert(var.avg_rt >= 18 and var.avg_rt <= 22)
	__end__
	set _prepare ""
